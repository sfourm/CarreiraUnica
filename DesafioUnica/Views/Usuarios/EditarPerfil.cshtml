@model DesafioUnica.Models.Usuario

@{ Layout = "_LayoutNulo";
                ViewData["Title"] = "Editar Perfil"; }

<!-- Modal -->
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Editar Perfil</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form asp-action="EditarPerfil">
            <div class="modal-body">
                <div class="account-wall">
                    <input type="hidden" asp-for="UsuarioId" class="form-control" />
                    <input type="hidden" asp-for="Email" class="form-control" />
                    <input type="hidden" asp-for="Senha" class="form-control" />


                    <div class="form-group divSpaceMargin">
                        <label class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>


                    <div class="form-group divSpaceMargin">
                        <label class="control-label">Telefone</label>
                        <input id="telefone" asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="form-group divCadastro">
                        <label asp-for="Cpf" class="control-label"></label>
                        <input type="text" asp-for="Cpf" id="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>

                    <div class="form-group divSpaceMargin">
                        <label class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-block">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-block btn-primary" />
                </div>

                <div class="form-group text-center">
                    <a asp-action="Perfil">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#Telefone').mask('(00) 00000-0000');
            $('#Cpf').mask('000.000.000-0');
        });
    </script>
}